from abc import ABC, abstractmethod
class Empleado(ABC):
    @abstractmethod
    def calcular_sueldo(self):
        pass
class EmpleadoPorHora(Empleado):
    def __init__(self, nombre, horas, tarifa_hora):
        self.nombre = nombre
        self.horas = horas
        self.tarifa_hora = tarifa_hora
    def calcular_sueldo(self):
        return self.horas * self.tarifa_hora
class EmpleadoFijo(Empleado):
    def __init__(self, nombre, salario_mensual):
        self.nombre = nombre
        self.salario_mensual = salario_mensual
    def calcular_sueldo(self):
        return self.salario_mensual
if __name__ == "__main__":
    empleados = [
        EmpleadoPorHora("Ana", 40, 15),
        EmpleadoFijo("Luis", 2000)
    ]
    for e in empleados:
        print(f"{e.nombre} - Sueldo: ${e.calcular_sueldo():.2f}")
